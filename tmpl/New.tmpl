{{ define "New" }}
{{ template "Header" }}
{{ template "Menu" }} 
<h2>Cadastrar Usuário</h2>
<div class="container" style="margin-top:60px;">
    <div class="card border-primary">
        <h5 class="card-header bg-primary" style="color: white;">Cadastrar Novo Usuário</h5>
        <div class="card-body">
        <div class="row-fluid">
        <form method="POST" action="insert">
        <div class="form-group">
            <label for="UsuarioNome">Nome:</label>
            <input type="text" class="form-control" id="UsuarioNome" name="UsuarioNome">          
        </div>
        <div class="form-group">
            <label for="UsuarioEmail">E-mail:</label>
            <input type="text" class="form-control" id="UsuarioEmail" name="UsuarioEmail">          
        </div>
        <div class="form-group">
            <label for="UsuarioLogin">Login:</label>
            <input type="text" class="form-control" id="UsuarioLogin" name="UsuarioLogin">          
        </div>
        <div class="form-group">
            <label for="UsuarioSenha">Senha:</label>
            <input type="text" class="form-control" id="UsuarioSenha" name="UsuarioSenha">          
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        </form> 
    </div>
  </div>
</div>
{{ template "Footer" }}
</div>
{{ end }}